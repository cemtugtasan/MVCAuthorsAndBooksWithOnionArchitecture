@model MvcOnion.Application.Dtos.AuthorDtos.AuthorCreateDto

<h4>AuthorCreateDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div>
                <label for="book">Kitap Adı</label>
                <button type="button" class="btn btn-info" id="addBook">Kitap Ekle</button>
                <button type="button" class="btn btn-danger" id="removeBook">Son Ekleneni Çıkart</button>
            </div>
            <div class="form-group">
                <ul id="bookList">
                </ul>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $("#addBook").click(function() {
            console.log("tıkla");
            $("#bookList").append(`<li class='book'>
                                    <input class='bookItem' name='book' type='text' />
                                    </li>`)
        })

        $("#removeBook").click(() => {
            $("#bookList").children().last().remove();
        })
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
